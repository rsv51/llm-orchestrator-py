# Application Configuration
APP_NAME=llm-orchestrator
APP_HOST=0.0.0.0
APP_PORT=8000
APP_ENV=development
APP_DEBUG=true

# Authentication
AUTH_TOKEN=your-secret-token-change-in-production

# Database Configuration
DATABASE_TYPE=sqlite
# SQLite
DATABASE_URL=sqlite+aiosqlite:///./data/llm_orchestrator.db
# MySQL example
# DATABASE_URL=mysql+asyncmy://user:password@localhost:3306/llm_orchestrator

# Redis Configuration
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_FORMAT=json

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=300
HEALTH_CHECK_MAX_ERRORS=5
HEALTH_CHECK_RETRY_HOURS=1

# Request Configuration
MAX_RETRY_COUNT=3
REQUEST_TIMEOUT=30
RESPONSE_TIMEOUT=300

# CORS Configuration
CORS_ORIGINS=*
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*